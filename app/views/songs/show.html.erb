<h1 class="title"><%= @song.title %></h1>
<div class="description">
  <%= @song.description %>
</div>

<div class="iframe-wrapper">
  <% @song.iframes.each do |iframe| %>
    <div id="iframe-item">
      <%= iframe.iframe_url.html_safe %>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="command-wrapper">
    <%= link_to "Back", songs_path, :class => "button-item" %>
    <%= link_to "Edit", edit_song_path, :class => "button-item" %>
    <%= link_to "Delete", song_path, :class => "button-item", :id => "button-item-delete", method: :delete, data: { confirm: "Are you sure?"} %>  
  </div>
<% end %>

<div class="prev-next-wrapper">
  <div class="prev">
    <% if @song.previous %>
      <%= link_to @song.previous, :class => "pn-link-left", :action => 'go' do %>
        <div class="arrow-left"><i class="fas fa-chevron-left"></i></div>
        <div class="left-title"><%= @song.previous.title %></div>
      <% end %>
    <% end %>
  </div>
  
  <div class="next">
    <% if @song.next %>
      <%= link_to @song.next, :class => "pn-link-right", :action => 'go' do %>
        <div class="arrow-right"><%= @song.next.title %></div>
        <div class="right-title"><i class="fas fa-chevron-right"></i></div>
      <% end %>
    <% end %>
  </div>
</div>