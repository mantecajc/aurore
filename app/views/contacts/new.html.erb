<div class="new-form">
    <div class="contact-form">
        <%= form_for @contact do |f| %>
            <% if flash[:error].present? %>
                <p>flash[:error]</p>
            <% end %>
            <p class="contact-item">
                <%= f.label :name, 'Name *', :class => 'label-item' %>
                <%= f.text_field :name, required: true, :class =>'text-item' %>
            </p>
            <p class="contact-item">
                <%= f.label :last_name, :class => 'label-item' %>
                <%= f.text_field :last_name, :class =>'text-item' %>
            </p>
            <p class="contact-item">
                <%= f.label :email, 'Email Adresse *', :class => 'label-item' %>
                <%= f.text_field :email, required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', :class =>'text-item' %>
            </p>
            <p class="contact-item">
                <%= f.label :subject, 'Subject *', :class => 'label-item' %>
                <%= f.text_field :subject, required: true, :class =>'text-item' %>
            </p>
            <p class="message-item">
                <%= f.label :message, 'Message *', :class => 'label-item' %>
                <%= f.text_area :message, as: :text, :class => 'text-message-item' %>
            </p>
            <div class= "hidden">
                <%= f.label :nickname %>
                <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
            </div>
            <p class="submit-item">
                <%= f.submit "Let's Work Together", :class => 'submit-button' %>
            </p>
        <% end %>
    </div>

    <div class="contact-details">
        <div class="expertise-detail">
            <h4>Areas of Expertise</h4>
            <h1>Music Production</h1>
            <h1>Post Sound Production</h1>
            <h1>Sound Design</h1>
            <h1>Mixing / Mastering</h1>
        </div>
        <div class="email-detail">
            <h4>By email</h4>
            <p>jeff@labelaurore.fr</p>
        </div>
        <div class="phone-detail">
            <h4>By phone</h4>
            <p>+33 (0)6 29 47 95 03</p>
            <p>+44 (0)7 541 648 359</p>
        </div>
    </div>
</div>